<% layout("layouts/boilerplate") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-links">
        <div class="card col" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 16rem; border-radius: 1rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b><br>
                    &#x20b9; <%= listing.price.toLocaleString("en-IN") %> /night
                </p>
            </div>
        </div>
    </a>
    <%}%>
    </div>
</body>